!curl https://raw.githubusercontent.com/MicrosoftLearning/intropython/master/world_temp_mean.csv -o mean_temp.txt mean_temp_file = open('mean_temp.txt', 'a+') mean_temp_file.write("Rio de Janeiro,Brazil,30.0,18.0\n")  mean_temp_file.seek(0) headings = mean_temp_file.readline() headings = headings.split(',') city_temp = mean_temp_file.readline() while city_temp:     city_temp = city_temp.split(',')     print(headings[0].capitalize(), 'of', city_temp[0], headings[2], 'is', city_temp[2], 'Celsius')     city_temp = mean_temp_file.readline()  mean_temp_file.close()
